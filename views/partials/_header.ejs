<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success sticky-top">
    <a class="navbar-brand" href="/">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>

    <!-- if user exists, display their username and logout button, else display the login and register buttons on the navbar -->

    <% if (typeof user !== 'undefined') {  %>
    <span class="navbar-text">Welcome, <%= user.email; %>&nbsp;&nbsp;</span> 
      <form action="/logout" method="POST">
        <button type="submit" class="btn btn-danger">Logout</button>
      </form>
    <% } else { %>
    <form action="/login" method="GET">
      <button type="submit" class="btn btn-primary mr-3">Login</button>
    </form>
    <form action="/register" method="GET">
      <button type="submit" class="btn btn-dark">Register</button>
    </form>
    <% } %>
    
  </nav>
</header>
